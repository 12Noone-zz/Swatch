<h2><%= @house.title %> </h2>
<h3><strong>By:</strong> <%= current_user.name %></h3>

<p><%= @house.content %></p>
<%= link_to image_tag(@house.image.url(:large)), @house.image.url %>
<div id="show">
	<ul>
		<% @project.each do |project| %>
		<li>
			<a href="<%= projects_path %>/<%= project.id %>"><%= project.title %></a>
			
		</li>
		<% end %>
	</ul>
<li><a href="<%= new_project_path %>">New Project!</a></li>

<% if current_user %> 
	<%= link_to "Delete House", house_path(@house), method: :delete, data: {confirm: "This is the equivilant of pouring gasoline in the trashcan, dropping a match, and walking out the front door whistling. All projects will be lost..."} %>

	<%= link_to "Edit House", house_path(@house), method: :update %>
<% end %>