<div class="container">
	<div class="row">
		<div class="col s12">
			<div class="fb-share-button" data-href="https://limitless-ridge-7166.herokuapp.com/houses/7" data-layout="button"></div>
			<h1><%= @house.title %> </h1>
			<h3><strong>By:</strong> <%= current_user.name %></h3>

			<p><%= @house.content %></p>
			 <% @house.attachments.each_with_index do |image, index| %>
			<%= image_tag image.url(), :class => 'responsive-img' %>
			<% end %>
			<div id="show">
				<ul>
					<% @project.each do |project| %>
					<li>
						<%= link_to project.title, house_project_path(@house, project) %> 
					</li>
					<% end %>
				</ul>
			<h1>Below you can view all the projects for your house or create a new one!</h1>
			
			<%= link_to 'New Project', new_house_project_path(@house, @project), :class => 'btn-large' %>
	
				<%= link_to "Delete House", house_path(@house), method: :delete, data: {confirm: "Deleting your house will also delete all projects and comments inside it!"}, :class => 'btn-large' %>

				<%= link_to "Edit House", edit_house_path(@house), :class => 'btn-large' %>
		
		</div>
	</div>
</div>