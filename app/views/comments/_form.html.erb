<h3>Post a Comment</h3>
  <% if current_user %>
    <%= form_for [ @project, Comment.new ] do |f| %>
       <p><%= f.label :author_name %><br/>
          <%= f.text_field :author_name %>
      </p> 
    <p>
      <%= f.label :body %><br/>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'Submit', :class => "btn-large" %>
    </p>
    <% end %>
<% end %>